{
  "semi": true,
  "tabWidth": 2,
  "trailingComma": "all",
  "printWidth": 80,
  "arrowParens": "always",
  "overrides": [
    {
      "files": ["*.test.ts"],
      "options": {
        "singleQuote": false
      }
    },
    {
      "files": ["*.html", "legacy/**/*.js"],
      "options": {
        "tabWidth": 4,
        "printWidth": 120
      }
    }
  ]
}
